<!DOCTYPE html>
<html>
  <head>
    <title>GuardiansDestiny</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-dark bg-inverse">
      <div class="nav navbar-nav">
        <%= link_to 'PvP', users_path(type: 'pvp'), class: "nav-item nav-link #{'active' if @type == 'pvp'}" %>
        <%= link_to 'PvE', users_path(type: 'pve'), class: "nav-item nav-link #{'active' if @type == 'pve'}" %>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
